%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%		Color Theme
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% Defined Colors
\definecolor{gray}{RGB}{90, 90, 90}
\definecolor{white}{RGB}{255,255,255}
\definecolor{purple}{RGB}{61,22,96}
\definecolor{gold}{RGB}{236,168,19}
\definecolor{black}{RGB}{0,0,0}

% Background Color
\setbeamercolor*{background canvas}{bg=white}

% Colors
\setbeamercolor*{title}{fg=purple}
\setbeamercolor{section in toc}{fg=purple}
\setbeamercolor{subsection in toc}{fg=black}
\setbeamercolor{frametitle-left}{fg=purple}
\setbeamercolor{frametitle}{fg=purple}
\setbeamercolor*{itemize item}{fg=gold}
\setbeamercolor*{itemize subitem}{fg=purple}
\setbeamercolor*{enumerate subitem}{fg = purple}
\setbeamercolor*{enumerate item}{fg = gold}
\setbeamercolor*{normal text}{fg=black}
\setbeamercolor*{page number in head/foot}{fg=purple}
\setbeamercolor*{caption name}{fg = purple}

% Fonts
\setbeamerfont{title}{size=\Huge}
\setbeamerfont{subtitle}{size=\large}
\setbeamerfont{frametitle}{size=\Large}
\setbeamerfont{framesubtitle}{size=\small}

% Bibliography Setup
\setbeamercolor{*bibliography item}{fg = purple}
\setbeamercolor*{bibliography entry title}{fg = black}
\setbeamercolor*{bibliography entry author}{fg = purple}
\setbeamercolor*{bibliography entry location}{fg = black} 